{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Merge i18n Builder",
  "description": "Merge per-component translation files into a single file",
  "type": "object",
  "properties": {
    "translationPattern": {
      "type": "string",
      "default": "src/**/*.i18n.{json,xml}",
      "description": "Glob pattern for translation files"
    },
    "outputFile": {
      "type": "string",
      "default": "src/locale/translations.json",
      "description": "Output file path"
    },
    "outputFormat": {
      "type": "string",
      "enum": ["json", "xml"],
      "default": "json",
      "description": "Output format"
    },
    "sortKeys": {
      "type": "boolean",
      "default": true,
      "description": "Sort translation keys alphabetically"
    }
  },
  "required": ["translationPattern", "outputFile"]
}
