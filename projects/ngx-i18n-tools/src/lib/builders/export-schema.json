{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Export i18n Builder",
  "description": "Export all-in-one translations to XLIFF files",
  "type": "object",
  "properties": {
    "source": {
      "type": "string",
      "description": "Source translation file for merged mode"
    },
    "translationPattern": {
      "type": "string",
      "description": "Glob pattern for translation files in per-component mode"
    },
    "outputPath": {
      "type": "string",
      "default": "src/locale",
      "description": "Output directory for XLIFF files"
    },
    "format": {
      "type": "string",
      "enum": ["xliff", "xliff2"],
      "default": "xliff2",
      "description": "XLIFF format version"
    },
    "sourceLocale": {
      "type": "string",
      "default": "en",
      "description": "Source language code"
    },
    "targetLocales": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [],
      "description": "Target language codes"
    }
  },
  "required": ["outputPath", "sourceLocale", "targetLocales"]
}
