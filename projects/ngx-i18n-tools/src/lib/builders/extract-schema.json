{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Extract i18n Builder",
  "description": "Extract i18n messages from templates",
  "type": "object",
  "properties": {
    "mode": {
      "type": "string",
      "enum": ["per-component", "merged"],
      "default": "per-component",
      "description": "Extraction mode: per-component (one file per template) or merged (single file)"
    },
    "templatePattern": {
      "type": "string",
      "default": "src/**/*.component.html",
      "description": "Glob pattern to find template files"
    },
    "translationFileNaming": {
      "type": "string",
      "default": "{component}.i18n.json",
      "description": "Naming pattern for translation files in per-component mode"
    },
    "outputFile": {
      "type": "string",
      "description": "Output file path for merged mode"
    },
    "outputFormat": {
      "type": "string",
      "enum": ["json", "xml"],
      "default": "json",
      "description": "Output format for translation files"
    },
    "sourceLocale": {
      "type": "string",
      "default": "en",
      "description": "Source language code"
    },
    "targetLocales": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [],
      "description": "Target language codes"
    },
    "preserveExisting": {
      "type": "boolean",
      "default": true,
      "description": "Preserve existing translations when re-extracting"
    },
    "cleanUnused": {
      "type": "boolean",
      "default": false,
      "description": "Remove unused keys from translation files"
    },
    "validateInterpolations": {
      "type": "boolean",
      "default": true,
      "description": "Validate interpolation placeholders"
    },
    "sortKeys": {
      "type": "boolean",
      "default": false,
      "description": "Sort translation keys alphabetically"
    }
  },
  "required": ["mode", "sourceLocale", "targetLocales"]
}
